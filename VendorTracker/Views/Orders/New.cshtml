@{ 
  Layout = "_Layout";
}

<h1>Add a new order to @Model.Name</h1>
    
<form action="/vendors/@Model.Id/orders" method="post">
    <input id="vendorId" name="vendorId" type="hidden" value="@Model.Id">
    <label for="orderName">Order Name</label>
    <input id="orderName" name="orderName" type="text"><br>
    <label for="description">Order Description</label>
    <input id="description" name="description" type="text"><br>
    <label for="price">Price</label>
    <input id="price" name="price" type="text"><br>
    <label for="date">Date</label>
    <input id="date" name="date" type="text"><br>
    <button type="submit">Submit</button>    
</form>